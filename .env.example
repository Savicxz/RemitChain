# ---- Core app secrets/services ----
SESSION_SECRET=
INTERNAL_API_KEY=
FIREBASE_SERVICE_ACCOUNT=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ---- Data stores ----
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/remitchain?schema=public

# ---- Relayer/SubQuery endpoints ----
RELAYER_URL=http://localhost:8787
RELAYER_API_KEY=dev-key
SUBQUERY_GRAPHQL_URL=http://localhost:3001

# ---- Chain runtime mode ----
# local  = local chain process/containers
# docker = force docker-managed local chain
# remote = shared VM chain via REMOTE_STATUS_URL/RELAYER_URL
CHAIN_MODE=local
CHAIN_WS_URL=ws://127.0.0.1:9944
REMOTE_STATUS_URL=
REMOTE_DEV_STRICT=false

# ---- Dev identity (used in remote mode) ----
DEV_IDENTITY=
DEV_INDEX=
DEV_ACCOUNT_ADDRESS=

# ---- Chain startup options ----
CHAIN_COMMAND=cargo run -p minimal-template-node --manifest-path chain/Cargo.toml -- --dev --tmp
CHAIN_DOCKER=false
CHAIN_IMAGE=remitchain-node:latest
CHAIN_TYPES_PATH=
CHAIN_TYPES_JSON=

# ---- Frontend signing config ----
NEXT_PUBLIC_ENABLE_SIGNING=true
NEXT_PUBLIC_DEADLINE_BLOCKS=50
NEXT_PUBLIC_SIGNATURE_DEBUG=false
NEXT_PUBLIC_CHAIN_ID=1337
NEXT_PUBLIC_SIGNING_DOMAIN=remitchain
NEXT_PUBLIC_SIGNING_ACTION=send
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=